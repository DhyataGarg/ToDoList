<%- include("header") -%>

<div class="authentication-form">
  <form class="card" action="/sendemail" method="POST">
    <h1 class="myToDOListHeading">My ToDoList</h1>

    <div class="control">
      <label>First Name</label> <input type="text" name="firstName" required />
    </div>
    <div class="control">
      <label>Last Name</label> <input type="text" name="lastName" />
    </div>
    <div class="control">
      <label>E-mail</label> <input type="email" name="username" required />
    </div>
    <div class="control">
      <label>Password</label>
      <input type="password" name="password" required minlength="8" />
    </div>
    <div class="control"><button type="submit">Signup</button></div>
    <p>Have an account? <a href="/login">Login</a></p>
  </form>
</div>

<%- include("footer") -%>
